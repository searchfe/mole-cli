{
    "compilerOptions": {
        "declaration": false,
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "dist",
        "target": "es2015",
        "lib": [
            "es2015",
            "es2015.promise"
        ],
        "sourceMap": false,
        "skipDefaultLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        // "noImplicitAny": true,
        "strictNullChecks": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.json"
    ],
    "exclude": []
}